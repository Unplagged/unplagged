<phpunit bootstrap="bootstrap.php" 
         colors="true" 
         stopOnError="true"
         stopOnFailure="true"
         stopOnIncomplete="true"
         stopOnSkipped="true">
    <testsuite name="app">
        <directory>./application/</directory>
    </testsuite>
    <testsuite name="lib">
        <directory>./library</directory>
    </testsuite>
    <filter>
        <whitelist>
            <directory suffix=".php">./../application/</directory>
            <directory suffix=".php">./../library/Unplagged</directory>
            <directory suffix=".php">./../scripts/</directory>
        </whitelist>
    </filter>  
    <logging>
        <log type="coverage-html" 
             target="../docs/phpunit/coverage" 
             charset="UTF-8"
             yui="true" 
             highlight="true" 
             lowUpperBound="50" 
             highLowerBound="70" />
    </logging>
</phpunit>