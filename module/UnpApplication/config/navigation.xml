<?xml version="1.0"?>
<config>
  <navigation>
    <main>
      <overview>
        <label>Overview</label>
        <title>Overview</title>
        <module>default</module>
        <controller>overview</controller>
        <action>list</action>
        <route>default</route>
        <resource>overview</resource>
      </overview>
      <documents>
        <type>mvc</type>
        <label>Investigate</label>
        <title>Investigate Documents</title>
        <route>case-documents</route>
        <params>
          <case_id />
          <document_type>targets</document_type>
        </params>
      </documents>
      <sources>
        <type>mvc</type>
        <label>Sources</label>
        <title>Source Documents</title>
        <route>case-documents</route>
        <params>
          <case_id />
          <document_type>sources</document_type>
        </params>
      </sources>
      <files>
        <label>Files</label>
        <title>Files</title>
        <module>default</module>
        <controller>user</controller>
        <action>files</action>
        <route>default</route>
        <resource>user_files</resource>
        <pages>
          <case-files>
            <label>Case Files</label>
            <title>Case Files</title>
            <module>default</module>
            <controller>case</controller>
            <action>files</action>
            <route>default</route>
            <resource>case_files</resource>
            <visible>0</visible>
          </case-files>
          <public-files>
            <label>Public Files</label>
            <title>Public Files</title>
            <module>default</module>
            <controller>file</controller>
            <action>list</action>
            <route>default</route>
            <resource>file_list</resource>
          </public-files>
          <personal-files>
            <label>Personal Files</label>
            <title>Personal Files</title>
            <module>default</module>
            <controller>user</controller>
            <action>files</action>
            <route>default</route>
            <resource>user_files</resource>
          </personal-files>
          <upload>
            <label>Upload</label>
            <title>Upload</title>
            <module>default</module>
            <controller>file</controller>
            <action>upload</action>
            <visible>0</visible>
            <resource>file_upload</resource>
          </upload>
        </pages>
      </files>
      <fragments>
        <label>Fragments</label>
        <title>Fragments</title>
        <module>default</module>
        <controller>document_fragment</controller>
        <action>list</action>
        <route>default</route>
        <resource>document_fragment_list</resource>
      </fragments>
      <reports>
        <label>Reports</label>
        <title>Reports</title>
        <module>default</module>
        <controller>report</controller>
        <action>list</action>
        <route>default</route>
        <resource>report_list</resource>
      </reports>
    </main>
    <default>
      <home>
        <type>mvc</type>
        <label><![CDATA[<b class="icon-home icon-white"></b>]]>
        </label>
        <class>home</class>
        <title>Home</title>
        <route>home</route>
        <order>-100</order>
        <pages>
          <imprint>
            <label>Imprint</label>
            <title>Imprint</title>
            <module>default</module>
            <controller>index</controller>
            <action>imprint</action>
            <route>default</route>
            <resource>index_imprint</resource>
            <visible>0</visible>
          </imprint>
          <about>
            <label>About</label>
            <title>About</title>
            <module>default</module>
            <controller>index</controller>
            <action>about</action>
            <route>default</route>
            <resource>index_imprint</resource>
            <visible>0</visible>
          </about>
          <login>
            <label>Login</label>
            <title>Login</title>
            <controller>auth</controller>
            <action>login</action>
            <route>default</route>
            <resource>index_imprint</resource>
            <visible>0</visible>
          </login>
          <register>
            <label>Register</label>
            <title>Register</title>
            <controller>auth</controller>
            <action>register</action>
            <route>default</route>
            <resource>index_imprint</resource>
            <visible>0</visible>
          </register>
        </pages>
      </home>
      <admin>
        <label><![CDATA[<b class="icon-wrench icon-white"></b>]]>
        </label>
        <title>Administration</title>
        <uri>#</uri>
        <resource>admin_index</resource>
        <pages>
          <cases>
            <label>Cases</label>
            <title>Cases</title>
            <module>default</module>
            <controller>case</controller>
            <action>list</action>
            <route>default</route>
            <resource>case_list</resource>
            <pages>
              <create-case>
                <label>Create Case</label>
                <title>Create Case</title>
                <module>default</module>
                <controller>case</controller>
                <action>create</action>
                <visible>0</visible>
                <resource>case_create</resource>
              </create-case>
            </pages>
          </cases>
          <roles>
            <label>Roles</label>
            <title>Roles</title>
            <module>default</module>
            <controller>permission</controller>
            <action>list</action>
            <route>default</route>
            <resource>permission_list</resource>
            <pages>
              <edit-role>
                <label>Edit Role</label>
                <title>Edit Role</title>
                <module>default</module>
                <controller>permission</controller>
                <action>edit-role</action>
                <visible>0</visible>
                <resource>permission_edit-role</resource>
              </edit-role>
            </pages>
          </roles>
        </pages>
      </admin>
    </default>
    <footer>
      <about>
        <type>mvc</type>
        <label>About</label>
        <class>about</class>
        <title>About</title>
        <route>about</route>
      </about>
      <github>
        <label>Unplagged on Github</label>
        <uri>http://github.com/unplagged/unplagged</uri>
      </github>
      <imprint>
        <type>mvc</type>
        <label>Imprint</label>
        <class>imprint</class>
        <title>Imprint</title>
        <route>imprint</route>
      </imprint>
      <credits>
        <type>mvc</type>
        <label>Credits</label>
        <class>credits</class>
        <title>Credits</title>
        <route>credits</route>
      </credits>
    </footer>
  </navigation>
</config>